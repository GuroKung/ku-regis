<div class="login-bg">
  <div class="login-container">
    <div class="panel panel-default">
      <div class="panel-body top-bot-5">
        <form class="form-horizontal">
          <fieldset>
            <h3>Login to system</h3>
            <div class="form-group">
              <label for="inputEmail" class="col-lg-2 control-label col-lg-offset-1">Username</label>
              <div class="col-lg-6">
                <input type="text" class="form-control" ng-model="loginCtrl.data.username" placeholder="Enter username">
              </div>
            </div>
            <div class="form-group">
              <label for="inputPassword" class="col-lg-2 control-label col-lg-offset-1">Password</label>
              <div class="col-lg-6">
                <input type="password" class="form-control" ng-model="loginCtrl.data.pwd" placeholder="Enter password">
              </div>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox"> Remember me ( 3 hours )
              </label>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2"> </br>
                <a href="#">Forget your password ?</a> &nbsp;
                <button type="submit" ng-click="loginCtrl.login()" class="btn btn-primary">Signin</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
